<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="account_inf">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="your_post">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="over_break_line">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="back">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="edit_label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#676767</item>
    </style>


    <style name="forgot_pass">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#575757</item>
    </style>

    <style name="reset_passw">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="we_will_sen">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#626262</item>
    </style>

    <style name="Widget.Theme.LostAndFound.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="under_name">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="not_found">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#666C79</item>
    </style>


    <style name="post_name">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="post_description">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1E1E1E</item>
    </style>


    <style name="post_date_location">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#99000000</item>
    </style>
</resources>