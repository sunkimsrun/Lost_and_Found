<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Primary text style -->
    <style name="PrimaryText">
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Highlighted text style -->
    <style name="HighlightedText">
        <item name="android:textColor">#2196F3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Large white text style -->
    <style name="LargeWhiteText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Small text style -->
    <style name="SmallText">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style: Radio Button -->
    <style name="RadioButtonStyle">
        <item name="android:fontFamily">@font/adlam_display</item>
        <item name="android:textColor">@color/radio_text_color</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/radio_selector</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--  Style : Post Items -->
    <style name="LabelStyle">
        <item name="android:fontFamily">@font/adlam_display</item>
        <item name="android:textColor">@color/black</item>
    </style>




    <!--  Den  -->
    <style name="account_inf">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="your_post">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="over_break_line">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="back">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="edit_label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#676767</item>
    </style>


    <style name="forgot_pass">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#575757</item>
    </style>

    <style name="reset_passw">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="we_will_sen">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#626262</item>
    </style>

    <style name="under_name">
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="not_found">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#666C79</item>
    </style>


    <style name="post_name">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="post_description">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1E1E1E</item>
    </style>


    <style name="post_date_location">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">#99000000</item>
    </style>


    <!--  Srun  -->
    <style name="username_or_email">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#1E1E1E</item>
    </style>

    <style name="forgot_pass_blue">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2196F3</item>
    </style>

    <style name="login">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="or_continue">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#282828</item>
    </style>

    <style name="create_an_a">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#282828</item>
    </style>

    <style name="sign_up">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#0e75c2</item>
    </style>

    <style name="by_clicking">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#282828</item>
    </style>

    <style name="don_t_worry">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7A7A7A</item>
    </style>

    <!-- Style : Post Items Image -->
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <!-- Style : User Image -->
    <style name="UserImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">75dp</item>
    </style>

    <style name="UserPostImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="UserCompleteImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="OtpBox">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/otp_box_background</item>
        <item name="android:maxLength">1</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">20sp</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeColor">#E5E7EB</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomStatusStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_status_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeColor">#E5E7EB</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
