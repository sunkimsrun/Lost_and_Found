    <!--  Style : Post Items -->
    <style name="LabelStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <!--  Den  -->
    <style name="account_inf">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="back">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="edit_label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#676767</item>
    </style>


    <style name="forgot_pass">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#575757</item>
    </style>

    <style name="reset_passw">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2196F3</item>
    </style>


    <style name="post_name">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">-0.04</item>
        <item name="android:textColor">#1E1E1E</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="post_description">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#1E1E1E</item>
    </style>


    <!--  Srun  -->

    <style name="don_t_worry">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#7A7A7A</item>
    </style>

    <!-- Style : Post Items Image -->
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <!-- Style : User Image -->
    <style name="UserImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">75dp</item>
    </style>

    <style name="UserPostImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>

    <style name="UserPostImageView2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">21dp</item>
    </style>

    <style name="UserCompleteImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="UCropTheme.Custom" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:paddingTop">10dp</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="chipStrokeColor">#E5E7EB</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomStatusStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_status_selector</item>
        <item name="android:textColor">@color/chip_text_selector</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowElevation">4dp</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

</resources>
