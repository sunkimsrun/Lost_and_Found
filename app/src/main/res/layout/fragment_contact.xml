<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    tools:context=".fragment.ContactFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/user_information_bg"
            android:padding="24dp"
            tools:ignore="UselessParent">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/aimations" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/about_us"
                    android:textSize="30sp"
                    android:textStyle="bold"/>

            <TextView
                style="@style/LabelStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="Welcome to Foundit!"
                android:textSize="20sp"
                tools:ignore="HardcodedText"
                />

            <TextView
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="What You Can Do With FoundIt !"
                android:textColor="@color/light_blue"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <TextView
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/adlam_display"
                android:text="@string/Why_We_build"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/report_lost"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/lato"
                    android:padding="10sp"
                    android:text=" - By sharing a description, time, and location"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/report_found"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/lato"
                    android:padding="10sp"
                    android:text=" - to help the owner claim it back"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_photo"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/lato"
                    android:padding="10sp"
                    android:text=" - for better identification"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="25sp"
                    android:text="@string/provide_contact"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/lato"
                    android:padding="10sp"
                    android:text=" - Use by (phone number or email) for direct communication"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:text="@string/Browse_other_posts"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5sp"
                    android:fontFamily="@font/lato"
                    android:padding="10sp"
                    android:text=" - to find items or help others"
                    android:textColor="@color/black"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <TextView
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Why We Built It:"
                android:textColor="@color/light_blue"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <TextView
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="3dp"
                android:layout_marginTop="10dp"
                android:text="@string/to_solve" />

            <TextView
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="3dp"
                android:layout_height="wrap_content"
                android:text="@string/to_encourage" />

            <TextView
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="3dp"
                android:text="@string/to_create" />

            <TextView
                style="@style/LabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/purpose"
                android:textColor="@color/light_blue"
                android:textSize="20sp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20sp"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="8dp"
                android:fontFamily="@font/lato"
                android:text="@string/about_information"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            tools:ignore="UselessParent">

            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/light_blue"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/fragment_Contact_contact_us"
                android:textSize="35sp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="wrap_content"
                android:layout_height="280dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/contact_us"

                />

            <TextView
                style="@style/LabelStyle"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/gray"
                android:gravity="center_horizontal"
                android:text="Thank you for using FoundIt! If you have any question let us know what we can help you with :)"
                android:textSize="13sp"
                tools:ignore="HardcodedText" />

            <RelativeLayout
                android:id="@+id/tvEmail"
                android:layout_width="310dp"
                android:layout_height="105dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@drawable/bg_contact_card">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="20dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:contentDescription="Ico Message"
                        android:src="@drawable/ico_message"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textSize="20sp" />


                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tvLocation"
                android:layout_width="310dp"
                android:layout_height="105dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@drawable/bg_contact_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50dp"

                        android:layout_marginRight="15dp"
                        android:contentDescription="Ico Message"
                        android:src="@drawable/ico_contact_location"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:textSize="17sp" />


                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/tvCall"
                android:layout_width="310dp"
                android:layout_height="105dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_contact_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="50sp"
                        android:layout_height="50dp"
                        android:layout_marginRight="15dp"
                        android:contentDescription="Ico Message"
                        android:src="@drawable/ico_contact_phone"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_phone"
                        android:layout_marginRight="57dp"
                        android:textSize="18sp" />


                </LinearLayout>

            </RelativeLayout>

            <!-- Call Us Card -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check our social media"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/gray"
                android:layout_margin="15sp"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="20sp"
                    android:paddingLeft="5dp"
                    android:contentDescription="Ico Facebook"
                    android:src="@drawable/ico_facebook"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                  android:layout_marginTop="3dp"
                    android:contentDescription="Ico Telegram"
                    android:src="@drawable/ico_telegram"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
