<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/postImage"
        android:layout_width="375dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_container"
        app:shapeAppearanceOverlay="@style/RoundedImageView" />

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="20dp"
        android:layout_alignTop="@id/postImage"
        android:layout_alignParentStart="true"
        android:src="@drawable/ico_delete"
        android:background="@drawable/bg_saved"
        android:contentDescription="@string/post_Card_save_post_button"
        android:visibility="gone"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/postImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/postTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/post_Card_title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/userImage"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_container"
                app:shapeAppearanceOverlay="@style/UserPostImageView" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/post_name"
                    android:textAppearance="@style/post_name"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Calendar icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ico_calendar"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feb, 29 2025"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />

                    <!-- Spacer -->
                    <View
                        android:layout_width="10dp"
                        android:layout_height="0dp" />

                    <!-- Clock icon -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="6dp"
                        android:src="@drawable/ico_pin"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/displayTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RUPP"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="275dp"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/didver_line" />

        <TextView
            android:id="@+id/postInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:maxLines="3"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin et porta eros. Fusce odio felis, niacin eget posuere a, tempor sit amet ligula. Etiam non nulla ac metus condimentum pulvinar nec pellentesque urna."
            android:textSize="14sp"
            tools:ignore="HardcodedText" />


        <View
            android:layout_width="375dp"
            android:layout_height="2dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/didver_line" />

    </LinearLayout>

    <com.google.android.material.chip.Chip
        android:id="@+id/checkbox"
        style="@style/CustomStatusStyle"
        android:layout_width="wrap_content"
        android:layout_height="54dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:checked="true"
        android:clickable="false"
        android:text="@string/post_Card_found"
        android:textAlignment="textStart"
        tools:ignore="TextContrastCheck" />

</RelativeLayout>
