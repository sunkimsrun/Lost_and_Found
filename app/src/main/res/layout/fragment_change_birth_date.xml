<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_gravity="bottom"
    tools:context=".fragment.ChangeBirthDateFragment">

    <RelativeLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="#96000000"
        android:foregroundGravity="top"
        android:clipToOutline="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/account_inf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/change_birth_date"
            android:textSize="20sp"
            android:textAppearance="@style/over_break_line"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginVertical="16dp"/>

        <RelativeLayout
            android:id="@+id/birth_of_date"
            android:layout_width="317dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/information_container">

            <ImageView
                android:id="@+id/arr_down_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arr_down"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/dob_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:translationX="60dp"
                android:text="@string/dob"
                android:textAppearance="@style/edit_label"/>


            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/calender"/>

        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/password_label"
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/information_container">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/lock_icon"
            android:src="@drawable/pass_lock"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/eye_icon"
            android:layout_toEndOf="@id/lock_icon"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:hint="@string/enter_password_to_confirm"
            android:textAppearance="@style/edit_label"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="0dp" />


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/eye_icon"
            android:src="@drawable/eye"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <!-- Centered Back Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:id="@+id/confirm_button"
            android:layout_width="317dp"
            android:layout_height="55dp"
            android:background="@drawable/button"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/confirm_changes"
                android:textAppearance="@style/back"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>