<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgotPasswordLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF"
    tools:context=".ForgetPasswordActivity">

    <TextView
        android:id="@+id/titleForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/activity_Forget_Password_Forgot_Password"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emailContainer"
        android:layout_width="364dp"
        android:layout_height="68dp"
        android:layout_marginTop="24dp"
        android:background="#E0E0E0"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleForgotPassword">

        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:autofillHints="emailAddress"
            android:contentDescription="@string/todo_forgetemail"
            android:src="@drawable/icon_email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="296dp"
            android:layout_height="65dp"
            android:layout_marginStart="12dp"
            android:autofillHints="emailAddress"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/icon_forgetpassword"
            android:hint="@string/activity_Forget_Password_Enter_Your_Email_Address"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/emailIcon"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="TouchTargetSizeCheck, TextContrastCheck"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/infoText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="@string/we_will_send_you_a_message_to_set_or_reset_your_new_password"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/emailContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- First RelativeLayout with How to Verify Email -->
    <RelativeLayout
        android:id="@+id/verifyContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/infoText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/resendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activity_Forget_Password_How_To_Verify_Email"
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <!-- Second LinearLayout with 6 EditTexts -->
    <LinearLayout
        android:id="@+id/digitalInputContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/verifyContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp">

        <EditText
            android:id="@+id/digital1"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:importantForAutofill="no"
            android:minWidth="48dp"
            android:minHeight="60dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="20sp"
            android:hint="@string/activity_Forget_Password_hint_1"
            android:background="@drawable/otp_box_background" />

        <EditText
            android:id="@+id/digital2"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:importantForAutofill="no"
            android:minWidth="48dp"
            android:minHeight="60dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="20sp"
            android:layout_marginStart="12dp"
            android:hint="@string/activity_Forget_Password_hint_2"
            android:background="@drawable/otp_box_background" />

        <EditText
            android:id="@+id/digital3"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:importantForAutofill="no"
            android:minWidth="48dp"
            android:minHeight="60dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="20sp"
            android:layout_marginStart="12dp"
            android:hint="@string/activity_Forget_Password_hint_3"
            android:background="@drawable/otp_box_background" />

        <EditText
            android:id="@+id/digital4"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:importantForAutofill="no"
            android:minWidth="48dp"
            android:minHeight="60dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="20sp"
            android:layout_marginStart="12dp"
            android:hint="@string/activity_Forget_Password_hint_4"
            android:background="@drawable/otp_box_background" />

        <EditText
            android:id="@+id/digital5"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:importantForAutofill="no"
            android:minWidth="48dp"
            android:minHeight="60dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="20sp"
            android:layout_marginStart="12dp"
            android:hint="@string/activity_Forget_Password_hint_5"
            android:background="@drawable/otp_box_background" />

        <EditText
            android:id="@+id/digital6"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:importantForAutofill="no"
            android:minWidth="48dp"
            android:minHeight="60dp"
            android:inputType="number"
            android:gravity="center"
            android:maxLength="1"
            android:textSize="20sp"
            android:layout_marginStart="12dp"
            android:hint="@string/activity_Forget_Password_hint_6"
            android:background="@drawable/otp_box_background" />

    </LinearLayout>


    <TextView
        android:id="@+id/resendText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/activity_Forget_Password_Resend_Code_In"
        android:textColor="#666666"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/digitalInputContainer" />

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_Forget_Password_0_59"
        android:textColor="#666666"
        android:textSize="14sp"
        android:layout_marginStart="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/resendText1"
        app:layout_constraintStart_toEndOf="@+id/resendText1"
        app:layout_constraintTop_toTopOf="@+id/resendText1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submitBtn"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="@color/blue"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/digitalInputContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>
