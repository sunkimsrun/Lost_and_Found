<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:layout_gravity="bottom"
    tools:context=".fragment.NewPasswordFragment">



    <RelativeLayout
        android:id="@+id/top_panel"
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:background="#96000000"
        android:foregroundGravity="top"
        android:clipToOutline="true" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">

        <TextView
            android:id="@+id/account_inf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_new_password"
            android:textSize="20sp"
            style="@style/LabelStyle"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="16dp"/>

    <RelativeLayout
        android:id="@+id/new_password_label"
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/information_container">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/new_lock_icon"
            android:src="@drawable/pass_lock"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/new_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/new_eye_icon"
            android:layout_toEndOf="@id/new_lock_icon"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:hint="@string/new_password"
            android:textAppearance="@style/edit_label"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="0dp" />


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/new_eye_icon"
            android:src="@drawable/eye"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/confirm_password_label"
        android:layout_width="317dp"
        android:layout_height="55dp"
        android:layout_marginTop="19dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/information_container">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/confirm_lock_icon"
            android:src="@drawable/pass_lock"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"/>

        <EditText
            android:id="@+id/password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/confirm_eye_icon"
            android:layout_toEndOf="@id/confirm_lock_icon"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@android:color/transparent"
            android:hint="@string/confirm_password"
            android:textAppearance="@style/edit_label"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="0dp" />


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/confirm_eye_icon"
            android:src="@drawable/eye"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:id="@+id/confirm_button"
            android:layout_width="317dp"
            android:layout_height="55dp"
            android:background="@drawable/button"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/confirm_changes"
                android:textAppearance="@style/back"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>